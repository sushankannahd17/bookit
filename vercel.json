{
  "version": 2,
  "builds": [
    { "src": "backend/index.js", "use": "@vercel/node" },
    { "src": "frontend/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/index.js" },
    { "src": "/uploads/(.*)", "dest": "/backend/uploads/$1" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" }
  ]
}
